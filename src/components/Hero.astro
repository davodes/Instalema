<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br bg-dark-300"></div>
  
  <!-- Animated background elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary-500/5 rounded-full blur-3xl animate-float" style="animation-delay: -1.5s;"></div>
  </div>

  <div class="relative z-10 container-max text-center text-white section-padding">
    <div class="animate-fade-in">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-[#bffb4f12] border border-primary-500/30 mb-8">
        <span class="text-primary-400 text-sm font-medium">✓ Más de 15 años de experiencia</span>
      </div>

      <!-- Main heading -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-balance">
        Instalaciones y
        <span class="text-primary-500 block">Mantenimiento</span>
        Profesional
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-300 mb-12 max-w-3xl mx-auto text-balance">
        Servicios técnicos especializados con garantía de calidad. 
        Electricidad, fontanería, gas, climatización y más.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="/contacto" class="btn-primary text-lg px-8 py-4 group">
          Solicitar presupuesto
          <svg class="w-5 h-5 ml-2 inline-block group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a href="tel:+34123456789" class="btn-secondary text-lg px-8 py-4 group border-none background-transparent">
          ... o llámanos ahora
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-500">+500</div>
          <div class="text-sm text-gray-400">Proyectos realizados</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-500">24h</div>
          <div class="text-sm text-gray-400">Servicio urgencias</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-500">15+</div>
          <div class="text-sm text-gray-400">Años experiencia</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-500">100%</div>
          <div class="text-sm text-gray-400">Garantía calidad</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>