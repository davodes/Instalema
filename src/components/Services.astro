---

const services = [
  {
    icon: '/icons/InstalacionesElectricas.svg',
    title: 'Instalaciones eléctricas',
    description: 'Instalación y reparación de sistemas eléctricos residenciales y comerciales con total garantía.',
    features: ['Cuadros eléctricos', 'Iluminación LED', 'Domótica', 'Certificaciones']
  },
  {
    icon: '/icons/MantenimientoTecnico.svg',
    title: 'Mantenimiento técnico',
    description: 'Mantenimiento preventivo y correctivo de equipos e instalaciones industriales.',
    features: ['Mantenimiento preventivo', 'Reparaciones urgentes', 'Inspecciones técnicas', 'Informes detallados']
  },
  {
    icon: '/icons/Fontaneria.svg',
    title: 'Fontanería',
    description: 'Servicios completos de fontanería, desde reparaciones hasta instalaciones nuevas.',
    features: ['Reparación tuberías', 'Instalación sanitarios', 'Detección fugas', 'Urgencias 24h']
  },
  {
    icon: '/icons/Gas.svg',
    title: 'Instalaciones de gas',
    description: 'Instalación y mantenimiento de sistemas de gas con certificación oficial.',
    features: ['Gas natural', 'Gas butano/propano', 'Certificaciones', 'Revisiones anuales']
  },
  {
    icon: '/icons/Climatizacion.svg',
    title: 'Climatización',
    description: 'Sistemas de calefacción y refrigeración eficientes para tu comodidad.',
    features: ['Aire acondicionado', 'Calefacción', 'Aerotermia', 'Eficiencia energética']
  },
  {
    icon: '/icons/ReformasIntegrales.svg',
    title: 'Reformas integrales',
    description: 'Renovación completa de espacios con coordinación de todos los gremios.',
    features: ['Diseño personalizado', 'Coordinación obras', 'Licencias', 'Llave en mano']
  }
];
---

<section class="section-padding bg-dark-300 relative overflow-hidden" id="servicios">

  <div class="absolute w-fill-available min-h-screen inset-0 pointer-events-none">
    <div class="absolute top-36 left-60 w-56 h-56 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary-500/5 rounded-full blur-3xl animate-float" style="animation-delay: -1.5s;"></div>
  </div>

  <div class="container-max">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Nuestros Servicios
      </h2>
      <p class="text-xl text-dark-100 max-w-2xl mx-auto">
        Ofrecemos soluciones técnicas integrales con la máxima calidad.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="pricing-card group rounded-2xl p-10 border relative flex flex-col justify-between h-full transition-all duration-300 hover:-translate-y-1 bg-[#2a2a2a33] border-[#ffffff0a] hover:border-primary-500 shadow-[0_0_0_1px_#5dff0008] hover:shadow-[0_0_30px_-5px_rgba(90,225,0,13%)] hover:cursor-pointer"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="text-5xl mb-6 group-hover:scale-110 transition-transform">
            {typeof service.icon === 'string'
              ? <img src={service.icon} alt="" width="35" />
              : service.icon}
          </div>
          
          <h3 class="text-xl font-bold text-white mb-4">
            {service.title}
          </h3>
          
          <p class="text-neutral-300 mb-6">
            {service.description}
          </p>
          
          <ul class="space-y-2 mb-6">
            {service.features.map(feature => (
              <li class="flex items-center text-sm text-neutral-300">
                <svg class="w-4 h-4 text-primary-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          <a 
            href="/contacto" 
            class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors group-hover:translate-x-1"
          >
            Más información
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="/contacto" class="absolute inset-0 z-10"></a> 
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/servicios" class="btn-primary">
        Ver todos los servicios
      </a>
    </div>
  </div>
</section>

<style>
  .section-padding {
    padding-top: 2.5rem;
  }
</style>