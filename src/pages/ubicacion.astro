---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Ubicación - Instalema | Encuentra nuestra oficina en Madrid";
const description = "Visita nuestra oficina en Madrid. Calle Principal, 123, 28001 Madrid. Mapa de ubicación, horarios y información de contacto.";
---

<Layout title={title} description={description}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="section-padding bg-gradient-to-br from-dark-300 to-dark-300 text-white">
      <div class="mt-20 mb-5 container-max text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Nuestra Ubicación
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Visita nuestras oficinas o contacta con nosotros. Estamos estratégicamente ubicados 
          en Madrid para dar el mejor servicio a toda la comunidad.
        </p>
      </div>
    </section>

    <!-- Location Section -->
    <section class="section-padding">
      <div class="container-max">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Map -->
          <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="h-96 bg-gray-200 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 text-primary-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <h3 class="text-xl font-bold text-dark-300 mb-2">Mapa Interactivo</h3>
                <p class="text-dark-100">Calle Principal, 123<br>28001 Madrid</p>
                <a  href="https://maps.google.com/?q=40.4168,-3.7038" target="_blank" rel="noopener noreferrer" class="btn-primary mt-4 inline-block">
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl font-bold text-dark-300 mb-6">
                Información de Contacto
              </h2>
              <p class="text-lg text-dark-100 mb-8">
                Estamos aquí para ayudarte. Visítanos en nuestras oficinas o contacta con nosotros 
                por cualquiera de estos medios.
              </p>
            </div>

            <!-- Address -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-dark-300 mb-2">Dirección</h3>
                  <div class="text-dark-200">
                    Calle Principal, 123<br>
                    28001 Madrid<br>
                    España
                  </div>
                </div>
              </div>
            </div>

            <!-- Phone -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-dark-300 mb-2">Teléfono</h3>
                  <a href="tel:+34123456789" class="text-primary-600 hover:text-primary-700 text-xl font-medium">
                    +34 123 456 789
                  </a>
                  <p class="text-sm text-dark-100 mt-1">Disponible 24h para urgencias</p>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-dark-300 mb-2">Email</h3>
                  <a href="mailto:info@instalema.com" class="text-primary-600 hover:text-primary-700 text-xl font-medium">
                    info@instalema.com
                  </a>
                  <p class="text-sm text-dark-100 mt-1">Respuesta en menos de 24h</p>
                </div>
              </div>
            </div>

            <!-- Schedule -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-primary-500 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-dark-300 mb-2">Horario de Atención</h3>
                  <div class="text-dark-200 space-y-1">
                    <div class="flex justify-between">
                      <span>Lunes - Viernes:</span>
                      <span class="font-medium">8:00 - 18:00</span>
                    </div>
                    <div class="flex justify-between">
                      <span>Sábados:</span>
                      <span class="font-medium">9:00 - 14:00</span>
                    </div>
                    <div class="flex justify-between">
                      <span>Domingos:</span>
                      <span class="font-medium">Cerrado</span>
                    </div>
                    <div class="mt-3 pt-2 border-t border-gray-200">
                      <span class="text-primary-600 font-medium">⚡ Urgencias 24h disponibles</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="section-padding bg-gray-50">
      <div class="container-max">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-dark-300 mb-4">
            Zonas de Servicio
          </h2>
          <p class="text-xl text-dark-100">
            Ofrecemos nuestros servicios en Madrid y área metropolitana
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-6 shadow-lg text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-300 mb-2">Madrid Centro</h3>
            <p class="text-dark-100">
              Servicios completos en el centro de la capital con respuesta inmediata.
            </p>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-lg text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-300 mb-2">Zona Norte</h3>
            <p class="text-dark-100">
              Cobertura completa en Alcobendas, San Sebastián de los Reyes y alrededores.
            </p>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-lg text-center">
            <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-300 mb-2">Área Metropolitana</h3>
            <p class="text-dark-100">
              Servicios en toda la Comunidad de Madrid con desplazamiento gratuito.
            </p>
          </div>
        </div>

        <div class="text-center mt-12">
          <p class="text-dark-100 mb-6">
            ¿No encuentras tu zona? Contacta con nosotros para consultar disponibilidad
          </p>
          <a href="/contacto" class="btn-primary">
            Consultar disponibilidad
          </a>
        </div>
      </div>
    </section>

    <!-- Transport Info -->
    <section class="section-padding">
      <div class="container-max">
        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-dark-300 mb-4">
              Cómo Llegar
            </h2>
            <p class="text-lg text-dark-100">
              Información de transporte y acceso a nuestras oficinas
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Metro -->
            <div class="text-center">
              <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-dark-300 mb-2">Metro</h3>
              <div class="text-dark-100">
                <p>Línea 1 - Estación Sol</p>
                <p class="text-sm">A 5 minutos caminando</p>
              </div>
            </div>

            <!-- Bus -->
            <div class="text-center">
              <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-dark-300 mb-2">Autobús</h3>
              <div class="text-dark-100">
                <p>Líneas 3, 25, 39</p>
                <p class="text-sm">Parada en Calle Principal</p>
              </div>
            </div>

            <!-- Parking -->
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-dark-300 mb-2">Aparcamiento</h3>
              <div class="text-dark-100">
                <p>Parking público cercano</p>
                <p class="text-sm">Zona azul disponible en la calle</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>